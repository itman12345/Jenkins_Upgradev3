pipeline {
    agent none

    environment {
        VERSION = '0.1.0'
        RELEASE_VERSION = 'R.2'
    }

    stages {
      stage('Audit tools') {
        steps {
             script {
                    def dockerImage = 'maven:latest'
                    def dockerArgs = '-u root'

                    docker.image(dockerImage).inside(dockerArgs) {
          sh '''
              java -version
              mvn -version
          '''
          sh 'printenv'
          sh 'ls -l $WORKSPACE'
        }
      }
}
}

      stage('Unit Test') {
        steps {
              script {
                    def dockerImage = 'maven:latest'
                    def dockerArgs = '-u root'

                    docker.image(dockerImage).inside(dockerArgs) {
          dir('./java-tomcat-sample') {
            sh '''
              echo "Executing Unit Tests..."
              mvn test
          '''
          }
        }
      }
}
}

      stage('Build') {
        steps {
            script {
                    def dockerImage = 'maven:latest'
                    def dockerArgs = '-u root'

                    docker.image(dockerImage).inside(dockerArgs) {
          echo "Building version: ${VERSION} with suffix: ${RELEASE_VERSION}"
          echo 'Mention your Application Build Code here!!!'
          sh 'mvn -f java-tomcat-sample/pom.xml clean package'
        }
      }
    }
}
}
}


/*
Requirements -- 

1. Jenkins Docker PlugIns
    - Docker
    - Docker Pipeline

2. Install Docker Engine on Execution machine
   Link -- https://docs.docker.com/engine/install/

3. Add Jenkins User to Group
   sudo usermod -a -G docker jenkins

4. Reboot your Machine
   reboot

5. Execute Docker using root User-
   args '-u root'
*/
